<div class="mt-4">
    <div class="row">
        {{#each course}}
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card w-75 h-100">
                <a href="/course/{{this.slug}}">
                    <img class="img-course card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}">
                        <h5 class="card-title text-truncate">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/course/{{this.slug}}" class="btn btn-primary">H·ªçc Ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
