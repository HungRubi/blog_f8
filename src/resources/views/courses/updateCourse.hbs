<div class="mt-4">
    <h2>Tạo khóa học</h2>
    <form action="/course/list-course/{{course._id}}?_method=PUT" method="POST">
        <div class="form-group mt-3">
            <label>Name</label>
            <input type="text" class="form-control mt-2" value="{{course.name}}" name="name">    
        </div>
        <div class="form-group mt-3">
            <label>Description</label>
            <textarea class="form-control mt-2" name="description">{{course.description}}</textarea>   
        </div>
        <div class="form-group mt-3">
            <label>VideID</label>
            <input type="text" class="form-control mt-2" value="{{course.videoID}}" name="videoID">    
        </div>
        <div class="form-group mt-3">
            <label>Trình độ</label>
            <input type="text" class="form-control mt-2" value="{{course.level}}" name="level"">    
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Tạo khóa học</button>
    </form>
</div>