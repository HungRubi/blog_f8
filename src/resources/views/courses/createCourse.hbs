<div class="mt-4">
    <h2>Tạo khóa học</h2>
    <form action="/course/store" method="post">
        <div class="form-group mt-3">
            <label>Name</label>
            <input type="text" class="form-control mt-2" name="name"  placeholder="Name...">    
        </div>
        <div class="form-group mt-3">
            <label>Description</label>
            <input type="text" class="form-control mt-2" name="description" placeholder="Description...">    
        </div>
        <div class="form-group mt-3">
            <label>VideID</label>
            <input type="text" class="form-control mt-2" name="videoID"  placeholder="VideID...">    
        </div>
        <div class="form-group mt-3">
            <label>Trình độ</label>
            <input type="text" class="form-control mt-2" name="level"  placeholder="Trình độ...">    
        </div>
        <button type="submit" class="mt-3 btn btn-primary">Tạo khóa học</button>
    </form>
</div>